{
  "addons": [
    "heroku-postgresql",
    "heroku-redis"
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": {
      "value": "revengine.settings.deploy"
    },
    "DJANGO_SECRET_KEY": {
      "description": "Django's secret key",
      "generator": "secret"
    },
    "ENVIRONMENT": {
      "value": "review"
    },
    "ALLOWED_HOSTS": {
      "value": ".herokuapp.com"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "hobby"
    }
  },
  "name": "rev-engine",
  "environments": {
    "review": {
      "scripts": {
        "postdeploy": "python manage.py bootstrap-review-app"
      }
    }
  },
  "scripts": {},
  "stack": "container"
}
