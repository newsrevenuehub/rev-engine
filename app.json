{
  "addons": [
    "heroku-postgresql",
    "heroku-redis",
    "papertrail"
  ],
    "buildpacks": [
      {
        "url": "https://github.com/moneymeets/python-poetry-buildpack"
      },
      {
        "url": "heroku/python"
      },
      {
        "url": "heroku/nodejs"
      }
    ],
  "env": {
    "DJANGO_SETTINGS_MODULE": {
      "value": "revengine.settings.deploy"
    },
    "DJANGO_SECRET_KEY": {
      "description": "Django's secret key",
      "generator": "secret"
    },
    "ENVIRONMENT": {
      "value": "review"
    },
    "ALLOWED_HOSTS": {
      "value": ".herokuapp.com"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "hobby"
    }
  },
  "name": "rev-engine",
  "stack": "container",
  "scripts": {
      "postdeploy": "echo hello"
  }
}
