{
  "addons": [
    "heroku-postgresql",
    "heroku-redis",
    "papertrail"
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": {
      "value": "revengine.settings.deploy"
    },
    "DJANGO_SECRET_KEY": {
      "description": "Django's secret key",
      "generator": "secret"
    },
    "ENVIRONMENT": {
      "value": "review"
    },
    "ALLOWED_HOSTS": {
      "value": ".herokuapp.com"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "hobby"
    }
  },
  "name": "rev-engine",
  "stack": "container",
  "scripts": {
      "postdeploy": "pg_dump --format=custom ${HEROKU_POSTGRESQL_CRIMSON_URL} | pg_restore --clean --no-owner --no-acl --format=custom --if-exists -d ${DATABASE_URL} || true"
  }
}
